@model IEnumerable<Kambao.Core.Equipe>

@{
    ViewBag.Title = "Equipes";
}

@Html.Bootstrap().ActionLinkButton("Nova Equipe", "Create").Style(ButtonStyle.Success).IconPrepend(Icons.tasks, true)

<hr/>
<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>        
            <th class="gridActions"></th>            
            <th>Descrição</th>        
        </tr>
    </thead>
    <tbody>
    @foreach (var equipe in Model) 
    {
        <tr> 
            <td class="gridActions">
               @Html.Bootstrap().ActionLinkButton("Editar", MVC.Equipes.Edit(equipe.Id)).Size(ButtonSize.Mini).Style(ButtonStyle.Default).IconPrepend(Icons.edit, false)
               @Html.Bootstrap().ActionLinkButton("Excluir", MVC.Equipes.Delete(equipe.Id)).Size(ButtonSize.Mini).Style(ButtonStyle.Default).IconPrepend(Icons.trash, false)                         
            </td>    
            <td class="span12">@equipe.Descricao</td>
        </tr>
    } 
    </tbody>
</table>
   