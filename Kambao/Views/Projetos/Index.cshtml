@model IEnumerable<Kambao.Core.Projeto>

@{
    ViewBag.Title = "Projetos";
}

@Html.Bootstrap().ActionLinkButton("Novo Projeto", "Create").Style(ButtonStyle.Success).IconPrepend(Icons.tasks, true)

<hr/>
<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>        
            <th class="gridActions"></th>            
            <th>Descrição</th>   
        </tr>
    </thead>
    <tbody>
    @foreach (var projeto in Model) 
    {
        <tr> 
            <td class="gridActions">
               @Html.Bootstrap().ActionLinkButton("Editar", MVC.Projetos.Edit(projeto.Id)).Size(ButtonSize.Mini).Style(ButtonStyle.Default).IconPrepend(Icons.edit, false)
               @Html.Bootstrap().ActionLinkButton("Excluir", MVC.Projetos.Delete(projeto.Id)).Size(ButtonSize.Mini).Style(ButtonStyle.Default).IconPrepend(Icons.trash, false)                         
            </td>    
            <td class="span12">@projeto.Descricao</td>
        </tr>
    } 
    </tbody>
</table>
   