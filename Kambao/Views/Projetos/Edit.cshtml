@model Kambao.Core.Projeto

@{
    ViewBag.Title = "Edição de Projeto";
}

@using (Html.BeginForm("Edit", "Projetos", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Bootstrap().ControlGroup().TextBoxFor(model => model.Descricao).Label().LabelText("Descrição")
	
    using(Html.Bootstrap().Container().BeginFormActions())
    {
        <div>
            @Html.Bootstrap().ActionLinkButton("Cancelar", "Index", "Projetos")
            @Html.Bootstrap().SubmitButton().Text("Salvar").Style(ButtonStyle.Success)
        </div>
    }
}

@Html.Bootstrap().ActionLinkButton("Nova Faixa", "Create").Style(ButtonStyle.Success).IconPrepend(Icons.tasks, true)

<hr/>
<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>        
            <th class="gridActions"></th>            
            <th>Descrição</th>
            <th>Projeto</th>        
        </tr>
    </thead>
    <tbody>
    @foreach (var faixa in Model.Faixas) 
    {
        <tr> 
            <td class="gridActions">
               @Html.Bootstrap().ActionLinkButton("Editar", MVC.Faixas.Edit(faixa.Id)).Size(ButtonSize.Mini).Style(ButtonStyle.Default).IconPrepend(Icons.edit, false)
               @Html.Bootstrap().ActionLinkButton("Excluir", MVC.Faixas.Delete(faixa.Id)).Size(ButtonSize.Mini).Style(ButtonStyle.Default).IconPrepend(Icons.trash, false)                         
            </td>    
            <td class="span9">@faixa.Descricao</td>
            <td class="span3">@faixa.projeto.Descricao</td>
        </tr>
    } 
    </tbody>
</table>
