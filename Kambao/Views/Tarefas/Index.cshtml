@model IEnumerable<Kambao.Core.Tarefa>

@{
    ViewBag.Title = "Tarefas";
}

@Html.Bootstrap().ActionLinkButton("Nova Tarefa", "Create").Style(ButtonStyle.Success).IconPrepend(Icons.tasks, true)

<hr />
<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>        
            <th class="gridActions"></th>            
            <th>Código</th> 
            <th>Descrição</th>       
        </tr>
    </thead>
    <tbody>
    @foreach (var tarefa in Model) 
    {
        <tr> 
            <td class="gridActions">
               @Html.Bootstrap().ActionLinkButton("Editar", MVC.Tarefas.Edit(tarefa.Id)).Size(ButtonSize.Mini).Style(ButtonStyle.Default).IconPrepend(Icons.edit, false)
               @Html.Bootstrap().ActionLinkButton("Excluir", MVC.Tarefas.Delete(tarefa.Id)).Size(ButtonSize.Mini).Style(ButtonStyle.Default).IconPrepend(Icons.trash, false)                         
            </td>    
            <td class="span1">@tarefa.Codigo</td>
            <td class="span12">@tarefa.Descricao</td>
        </tr>
    } 
    </tbody>
</table>
